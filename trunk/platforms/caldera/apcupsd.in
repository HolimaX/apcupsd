#! /bin/sh
#
# apcupsd      This shell script takes care of starting and stopping
#	       the apcupsd UPS monitoring daemon.
#
# description: apcupsd monitors power and takes action if necessary
#
# Modified 3 Jan 20001 for Caldera by John Pinner (john@clocksoft.com)
#

APCPID=@PIDDIR@/apcupsd.pid
APCUPSD=@sbindir@/apcupsd
APCACCESS=@sbindir@/apcaccess

DISTVER=`cat /etc/.issue | grep Version | cut -f 2 -d ' '` # if needed in future

# Source function libarary
. /etc/rc.d/init.d/functions

case "$1" in
    start)
       rm -f @PWRFAILDIR@/powerfail
       rm -f @nologdir@/nologin
       rm -f $APCPID
       echo -n "Starting UPS monitoring:" 
       $APCUPSD -f @sysconfdir@/apcupsd.conf
       echo
       touch @LOCKDIR@/subsys/apcupsd
       ;;
    stop)
       if [ -s $APCPID ]
	 then
	   echo -n "Shutting down UPS monitoring:"
	   PID=`cat $APCPID`
	   kill $PID
	   echo
	   rm -f $APCPID
       fi
       rm -f @LOCKDIR@/subsys/apcupsd
       ;;
    restart)
       $0 stop
       sleep 15
       $0 start
       ;;
    status)
       $APCACCESS status
       ;;
    *)
       echo "Usage: $0 {start|stop|restart|status}"
       exit 1
       ;;
esac
exit 0
